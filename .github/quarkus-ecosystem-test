#!/usr/bin/env bash
set -e

#MNV_OPTS="--settings .github/quarkus-ecosystem-maven-settings.xml -B -e -V -ntp -DtrimStackTrace=false"
MNV_OPTS="-B -e -V -ntp -DtrimStackTrace=false -Dquarkus-hilla.quarkus-snapshot=${QUARKUS_VERSION}"
# update the versions
mvn ${MNV_OPTS} -N versions:set-property -Dproperty=${QUARKUS_VERSION_POM_PROPERTY} -DnewVersion=${QUARKUS_VERSION} -DgenerateBackupPoms=false

echo "::group::Verify dependencies"
mvn -N help:all-profiles
mvn dependency:tree -Dincludes=org.hibernate.orm:hibernate-core -Dverbose
echo "::endgroup::"

# run the tests
echo "::group::Quarkus-Hilla Build"
mvn ${MNV_OPTS} -DskipTests install -Pdefault-modules
echo "::endgroup::"

echo "::group::Quarkus-Hilla Test"
mvn ${MNV_OPTS} verify -Pdefault-modules
echo "::endgroup::"

echo "::group::Quarkus-Hilla End-to-end Test (Development mode)"
mvn ${MNV_OPTS} -Dselenide.browserBinary=${SELENIDE_BROWSER_BINARY} -Pit-tests verify
echo "::endgroup::"

echo "::group::Quarkus-Hilla End-to-end Test (Production mode)"
mvn ${MNV_OPTS} -Dselenide.browserBinary=${SELENIDE_BROWSER_BINARY} -Pit-tests,production verify
echo "::endgroup::"

